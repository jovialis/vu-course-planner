{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "sourceMap": false,
    "outDir": "./lib",
    "declaration": false,
    "declarationMap": false,
    "inlineSourceMap": false,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true,
    "checkJs": false
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "tsc-alias": {
    "verbose": true,
    "debug": true,
    "resolveFullPaths": true
  }
}